<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_date_1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextTitle_1" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_time_1"
            app:layout_constraintStart_toEndOf="@+id/button_date_1"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="51dp"
            android:id="@+id/editTextTitle_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.102"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <Button
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_date_3"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_2"
            app:layout_constraintStart_toEndOf="@+id/editTextTitle_3" android:layout_marginStart="4dp"/>
    <Button
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_time_3"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_2" app:layout_constraintStart_toEndOf="@+id/button_date_3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.272"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="51dp"
            android:id="@+id/editTextTitle_3"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/spinner_2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle_2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_date_2"
            app:layout_constraintStart_toEndOf="@+id/editTextTitle_2"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_1"/>
    <Button
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_time_2"
            app:layout_constraintStart_toEndOf="@+id/button_date_2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.571" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_1"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="51dp"
            android:id="@+id/editTextTitle_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/spinner_1"/>

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:id="@+id/spinner_3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_date_3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fab_add_tasks"
            android:layout_gravity="bottom|end"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>